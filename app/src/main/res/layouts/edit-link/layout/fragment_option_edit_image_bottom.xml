<?xml version="1.0" encoding="utf-8"?>
<!-- 링크 편집 > 이미지 아이템 옵션 BottomSheet-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp"
    android:paddingHorizontal="45dp"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_bottom_sheet_radius"
    android:orientation="vertical"
    tools:context=".EditLink.EditLinkBottomSheet.OptionEditImageBottomFragment">

    <!-- BottomSheet 상단에 있는 수평바 -->
    <View
        android:layout_width="90dp"
        android:layout_height="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_bottom_sheet_bar_radius"/>

    <!-- BottomSheet 제목 - 글 아이템 옵션 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="6dp"
        android:layout_marginBottom="23dp"
        android:text="@string/option_image"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/shape_bottom_sheet_title_style"/>

    <!-- 이미지 설정/변경 버튼 -->
    <RelativeLayout
        android:id="@+id/relativelayout_set_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/set_image"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right_line"/>

    </RelativeLayout>

    <!-- 아이템 삭제 버튼 -->
    <RelativeLayout
        android:id="@+id/relativelayout_delete_edit_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/delete_edit_item"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right_line"/>

    </RelativeLayout>

</LinearLayout>