<?xml version="1.0" encoding="utf-8"?>
<!-- 링크 편집 아이템 - 할일 체크박스 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical">

    <!-- 체크 아이콘 -->
    <ImageView
        android:id="@+id/img_edit_link_checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="4dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_link_item_form_checkbox_unchecked"/>

    <!-- 할일 내용 -->
    <EditText
        android:id="@+id/edittext_edit_link_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_edit_link_checkbox"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:hint="@string/add_checkbox"
        android:textColorHint="@color/dark_gray"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <!-- 아이템 옵션 버튼 -->
    <ImageButton
        android:id="@+id/btn_option_edit_link_checkbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_btn_menu_edit_item" />

</RelativeLayout>