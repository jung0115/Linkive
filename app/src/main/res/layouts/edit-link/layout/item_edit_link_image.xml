<?xml version="1.0" encoding="utf-8"?>
<!-- 링크 편집 아이템 - 이미지 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="5dp"
    android:background="@drawable/shape_link_view_img_radius">

    <!-- 링크 편집 - 이미지 입력 전 -->
    <LinearLayout
        android:id="@+id/linearlayout_edit_link_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/shape_edit_link_img_radius"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 이미지 아이콘 -->
        <ImageView
            android:id="@+id/img_edit_link_image_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_link_item_form_image_gray" />

        <!-- 이미지 추가 안내 -->
        <TextView
            android:id="@+id/text_edit_link_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/add_image"
            android:textColor="@color/dark_gray"
            android:textSize="12sp" />

        <!-- 이미지 추가 버튼 -->
        <ImageButton
            android:id="@+id/btn_input_edit_link_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="7dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_btn_input_edit_item" />

    </LinearLayout>

    <!-- 링크 편집 페이지에서 이미지 설정했을 때 모습 -->
    <ImageView
        android:id="@+id/img_edit_link_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:background="@drawable/shape_link_view_img_radius"
        android:src="@drawable/img_link_item_thumbnail_default"
        android:visibility="gone"/>

    <!-- 아이템 옵션 버튼 -->
    <ImageButton
        android:id="@+id/btn_option_edit_link_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_btn_menu_edit_item" />

</RelativeLayout>