<?xml version="1.0" encoding="utf-8"?>
<!-- 링크 편집 아이템 삭제 확인 BottomSheet -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="15dp"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_bottom_sheet_radius"
    android:orientation="vertical"
    tools:context=".EditLink.EditLinkBottomSheet.DeleteEditItemBottomFragment">

    <!-- BottomSheet 상단에 있는 수평바 -->
    <View
        android:layout_width="90dp"
        android:layout_height="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_bottom_sheet_bar_radius"/>

    <!-- BottomSheet 안내 - 편집 아이템 삭제 확인 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="6dp"
        android:layout_marginBottom="23dp"
        android:gravity="center_horizontal"
        android:text="@string/notice_delete_edit_item"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <!-- 취소, 확인 버튼 -->
    <LinearLayout
        android:id="@+id/linearlayout_cancel_confirm_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="45dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <!-- 확인 버튼 -->
        <Button
            android:id="@+id/btn_confirm_delete_edit_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingVertical="9dp"
            android:paddingHorizontal="65dp"
            android:background="@drawable/shape_btn_confirm"
            android:text="@string/confirm"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <!-- 취소 버튼 -->
        <Button
            android:id="@+id/btn_cancel_delete_edit_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_cancel"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingVertical="9dp"
            android:paddingHorizontal="65dp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>