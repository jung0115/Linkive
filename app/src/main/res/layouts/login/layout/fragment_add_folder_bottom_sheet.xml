<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Folder.AddFolderBottomSheetFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="90dp"
            android:layout_height="5dp"
            android:src="@drawable/img_top_bottomsheet"
            android:layout_marginTop="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/shape_bottomsheet_title"
            android:paddingHorizontal="19dp"
            android:paddingVertical="6dp"
            android:text="@string/folder_add"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <RadioGroup
            android:id="@+id/rgroup_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="23dp">
            <RadioButton
                android:id="@+id/rbtn_red"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="none"
                android:background="@drawable/shape_folder_cover_red"
                />
            <RadioButton
                android:id="@+id/rbtn_orange"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="none"
                android:background="@drawable/shape_folder_cover_red"
                />
        </RadioGroup>

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>