<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login.SignUpActivity"
    android:paddingHorizontal="60dp">



    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_margin="60dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/input_nickname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:background="@drawable/button_outline_purple_30dp"
            android:hint="@string/nickname_hint"
            android:layout_marginBottom="10dp"
            android:maxLength="10"
            android:inputType="text"
            android:paddingLeft="10dp"/>

        <ImageView
            android:id="@+id/btn_error_nickname"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_warning"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:weightSum="3">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:background="@drawable/button_outline_purple_30dp"
                android:hint="@string/email_hint"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:inputType="text"
                android:paddingLeft="10dp"/>

            <ImageView
                android:id="@+id/btn_error_email"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right|center"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_warning"
                />

        </FrameLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_request_verify"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/certification_request"
            android:background="@drawable/button_solid_radius"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="10dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_marginRight="10dp">

            <EditText
                android:id="@+id/input_verify_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/button_outline_purple_30dp"
                android:hint="@string/certification_number"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_verify_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="03:00"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:textColor="@color/red"/>

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_verify"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/certification"
            android:background="@drawable/button_solid_radius"
            android:textColor="@color/white"
            android:textSize="15sp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/input_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:background="@drawable/button_outline_purple_30dp"
            android:hint="@string/id_hint"
            android:layout_marginBottom="10dp"
            android:inputType="text"
            android:maxLength="14"
            android:paddingLeft="10dp"/>

        <ImageView
            android:id="@+id/btn_error_id"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_warning"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:background="@drawable/button_outline_purple_30dp"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <CheckBox
            android:id="@+id/btn_view_hide"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:button="@android:color/transparent"
            android:background="@drawable/hidden"
            android:tag="0" />

        <ImageView
            android:id="@+id/btn_error_password"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_warning"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/input_check_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:background="@drawable/button_outline_purple_30dp"
            android:hint="@string/password_check_hint"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <CheckBox
            android:id="@+id/btn_view_hide2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:button="@android:color/transparent"
            android:background="@drawable/hidden"
            android:tag="0" />

        <ImageView
            android:id="@+id/btn_error_check_password"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_warning"
            />
    </FrameLayout>

    <CheckBox
        android:id="@+id/check_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="@string/personal_information_agree"
        android:layout_marginBottom="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:background="@drawable/button_solid_radius"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="@color/main_color"
        android:textSize="13sp"
        android:layout_gravity="right"/>

</LinearLayout>