<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Folder.RemoveFolderBottomSheetFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="90dp"
            android:layout_height="5dp"
            android:src="@drawable/img_top_bottomsheet"
            android:layout_marginTop="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:text="@string/folder_remove_explanation"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="17dp"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="20dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edittext"
                android:paddingVertical="14dp"
                android:paddingHorizontal="19dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_folder"
                    android:layout_marginRight="4dp"/>
                <TextView
                    android:id="@+id/textview_folder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="폴더명"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/folder_remove_question"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="21dp">
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="@string/confirm"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/shape_btn_confirm"
                android:minHeight="0dp"
                android:minWidth="0dp"
                />
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="@string/cancel"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/shape_btn_cancel"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginLeft="8dp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>