<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Folder.SelectFolderCoverFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="90dp"
            android:layout_height="5dp"
            android:src="@drawable/img_top_bottomsheet"
            android:layout_marginTop="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/shape_bottomsheet_title"
            android:paddingHorizontal="19dp"
            android:paddingVertical="6dp"
            android:text="@string/folder_cover_select"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/folder_cover_select_explanation"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="21dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="21dp">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="@string/cancel"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/shape_btn_cancel"
                android:minHeight="0dp"
                android:minWidth="0dp"
                />
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="@string/confirm"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/shape_btn_confirm"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginLeft="8dp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>