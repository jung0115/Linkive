<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Folder.AddFolderBottomSheetFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="90dp"
            android:layout_height="5dp"
            android:src="@drawable/img_top_bottomsheet"
            android:layout_marginTop="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/shape_bottomsheet_title"
            android:paddingHorizontal="19dp"
            android:paddingVertical="6dp"
            android:text="@string/folder_add"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <RadioGroup
            android:id="@+id/rgroup_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="23dp"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rbtn_red"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_red"
                android:checked="true"
                android:layout_marginRight="7dp"
                />
            <RadioButton
                android:id="@+id/rbtn_orange"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_orange"
                android:layout_marginRight="7dp"
                />
            <RadioButton
                android:id="@+id/rbtn_yellow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_yellow"
                android:layout_marginRight="7dp"
                />
            <RadioButton
                android:id="@+id/rbtn_green"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_green"
                android:layout_marginRight="7dp"
                />
            <RadioButton
                android:id="@+id/rbtn_blue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_blue"
                android:layout_marginRight="7dp"
                />
            <RadioButton
                android:id="@+id/rbtn_navy"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_navy"
                android:layout_marginRight="7dp"
                />
            <RadioButton
                android:id="@+id/rbtn_purple"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_purple"
                android:layout_marginRight="7dp"
                />
            <RadioButton
                android:id="@+id/rbtn_gray"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_gray"
                android:layout_marginRight="7dp"
                />
        </RadioGroup>

        <EditText
            android:id="@+id/edittext_folder_name"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="@string/folder_name_hint"
            android:textColorHint="@color/hint_text"
            android:textSize="15sp"
            android:paddingLeft="23dp"
            android:background="@drawable/shape_edittext"
            android:maxLength="10"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/shape_edittext">

            <EditText
                android:id="@+id/edittext_folder_password"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/folder_add_password_hint"
                android:maxLength="10"
                android:paddingLeft="23dp"
                android:textColorHint="@color/hint_text"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/check_eye"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="19dp"
                android:background="@drawable/selector_eye"
                android:button="@null"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_password_check"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/shape_edittext"
            android:visibility="gone"
            >

            <EditText
                android:id="@+id/edittext_folder_password_check"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/folder_add_password_check_hint"
                android:maxLength="10"
                android:paddingLeft="23dp"
                android:textColorHint="@color/hint_text"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/check_eye_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="19dp"
                android:background="@drawable/selector_eye"
                android:button="@null"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="21dp">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="@string/cancel"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/shape_btn_cancel"
                android:minHeight="0dp"
                android:minWidth="0dp"
                />
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="@string/confirm"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/shape_btn_confirm"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginLeft="8dp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>