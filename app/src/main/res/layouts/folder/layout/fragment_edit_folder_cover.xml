<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Folder.EditFolderCoverFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="90dp"
            android:layout_height="5dp"
            android:src="@drawable/img_top_bottomsheet"
            android:layout_marginTop="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/shape_bottomsheet_title"
            android:paddingHorizontal="19dp"
            android:paddingVertical="6dp"
            android:text="@string/folder_cover_edit"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <RadioGroup
            android:id="@+id/rgroup_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="23dp"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rbtn_red"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_red"
                android:checked="true"
                android:layout_marginRight="7dp"
                />
            <RadioButton
                android:id="@+id/rbtn_orange"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_orange"
                android:layout_marginRight="7dp"
                />
            <RadioButton
                android:id="@+id/rbtn_yellow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_yellow"
                android:layout_marginRight="7dp"
                />
            <RadioButton
                android:id="@+id/rbtn_green"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_green"
                android:layout_marginRight="7dp"
                />
            <RadioButton
                android:id="@+id/rbtn_blue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_blue"
                android:layout_marginRight="7dp"
                />
            <RadioButton
                android:id="@+id/rbtn_navy"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_navy"
                android:layout_marginRight="7dp"
                />
            <RadioButton
                android:id="@+id/rbtn_purple"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_purple"
                android:layout_marginRight="7dp"
                />
            <RadioButton
                android:id="@+id/rbtn_gray"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/selector_folder_cover_gray"
                android:layout_marginRight="7dp"
                />
        </RadioGroup>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_select_in_link_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="26dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_in_link_cover"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_enter_page_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="21dp">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="@string/cancel"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/shape_btn_cancel"
                android:minHeight="0dp"
                android:minWidth="0dp"
                />
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="@string/confirm"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/shape_btn_confirm"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginLeft="8dp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>