<?xml version="1.0" encoding="utf-8"?>
<!-- 링크 뷰 페이지 > 링크 관리 Bottom Sheet -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp"
    android:paddingHorizontal="45dp"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_bottom_sheet_radius"
    android:orientation="vertical"
    tools:context=".LinkView.LinkViewBottomSheet.ManageLinkBottomFragment">

    <!-- BottomSheet 상단에 있는 수평바 -->
    <View
        android:layout_width="90dp"
        android:layout_height="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_bottom_sheet_bar_radius"/>

    <!-- BottomSheet 제목 - 링크 관리 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="6dp"
        android:layout_marginBottom="23dp"
        android:text="@string/manage_link"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/shape_bottom_sheet_title_style"/>

    <!-- 페이지 수정 버튼 -->
    <RelativeLayout
        android:id="@+id/relativelayout_edit_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/manage_link_edit_page"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right_line"/>

    </RelativeLayout>

    <!-- 폴더 이동 버튼 -->
    <RelativeLayout
        android:id="@+id/relativelayout_move_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manage_link_move_folder"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right_line"/>

    </RelativeLayout>

    <!-- 링크로 접속 버튼 -->
    <RelativeLayout
        android:id="@+id/relativelayout_goto_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manage_link_goto_url"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right_line"/>

    </RelativeLayout>

    <!-- 페이지 삭제 버튼 -->
    <RelativeLayout
        android:id="@+id/relativelayout_delete_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manage_link_delete_page"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right_line"/>

    </RelativeLayout>

</LinearLayout>