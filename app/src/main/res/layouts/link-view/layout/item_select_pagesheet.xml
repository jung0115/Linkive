<?xml version="1.0" encoding="utf-8"?>
<!-- PageSheet 선택 BottomSheet에 나오는 PageSheet 리스트 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:padding="2dp">

    <!-- PageSheet명 -->
    <TextView
        android:id="@+id/text_select_pagesheet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:text="PageSheet"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <!-- 체크 아이콘 -->
    <ImageButton
        android:id="@+id/btn_select_pagesheet_checkbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_link_item_form_checkbox_unchecked"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>