<?xml version="1.0" encoding="utf-8"?>
<!-- 링크 뷰 아이템 - 장소(위치) -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingHorizontal="10dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/shape_link_view_place_dash">

    <!-- 장소 아이콘 -->
    <ImageView
        android:id="@+id/img_link_view_place"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_link_item_form_place"/>

    <!-- 주소 -->
    <LinearLayout
        android:id="@+id/linearlayout_link_view_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/img_link_view_place">

        <!-- 도로명 주소 -->
        <TextView
            android:id="@+id/text_link_view_place1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울 송파구 올림픽로 240"
            android:textSize="9sp"
            android:textColor="@color/black"/>

        <!-- 지번 주소 -->
        <TextView
            android:id="@+id/text_link_view_place2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울 송파구 올림픽로 240"
            android:textSize="9sp"
            android:textColor="@color/dark_gray"/>

    </LinearLayout>

</RelativeLayout>