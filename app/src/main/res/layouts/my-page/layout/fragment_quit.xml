<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPage.QuitFragment"
    android:padding="40dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_solid_radius"
        android:text="@string/quit"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:minHeight="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quit_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginVertical="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_outline_purple_30dp"
        android:hint="@string/email_hint"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:background="@drawable/button_outline_purple_30dp"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <CheckBox
            android:id="@+id/btn_view_hide"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:button="@android:color/transparent"
            android:background="@drawable/hidden"
            android:tag="0" />

    </FrameLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_solid_radius"
            android:text="@string/check"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_light_solid_radius"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </LinearLayout>



</LinearLayout>