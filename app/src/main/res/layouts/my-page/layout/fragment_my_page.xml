<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MyPage.MyPageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="20dp">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_profile"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dowon"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdf"
                        android:textSize="14sp"
                        android:textColor="@color/dark_gray"/>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:background="@color/transparent"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="20dp"/>

            <!-- Page Sheet -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_solid_elipse"
                android:text="@string/page_sheet"
                android:textColor="@color/white"
                android:paddingHorizontal="20dp"
                android:minHeight="30dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="@string/basic"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />

<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:id="@+id/basic_btn_recycler"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"-->
<!--                    app:spanCount="3"-->
<!--                    tools:listitem="@layout/page_sheet_item"-->
<!--                    />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_pagesheet_travel"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/button_outline_sky_10dp"
                            android:layout_marginLeft="10dp"
                            android:text="여행"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_pagesheet_study"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/button_outline_sky_10dp"
                            android:layout_marginLeft="20dp"
                            android:text="공부"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_pagesheet_dev"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/button_outline_sky_10dp"
                            android:layout_marginLeft="20dp"
                            android:text="개발"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_pagesheet_diary"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/button_outline_sky_10dp"
                            android:layout_marginLeft="10dp"
                            android:text="일기"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_pagesheet_check"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/button_outline_sky_10dp"
                            android:layout_marginLeft="20dp"
                            android:text="체크\n리스트"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Custom -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="20dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="@string/custom"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black"
                    />

<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:id="@+id/custom_btn_recycler"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"-->
<!--                    app:spanCount="3"-->
<!--                    tools:listitem="@layout/page_sheet_item"-->
<!--                    />-->

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_pagesheet_jeju"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button_outline_sky_10dp"
                    android:layout_marginRight="20dp"
                    android:text="제주도"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_pagesheet_add"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button_outline_sky_10dp"
                    android:text="+" />


            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="20dp"/>

            <!-- 고객 지원 -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_solid_elipse"
                android:text="@string/customer_service"
                android:textColor="@color/white"
                android:paddingHorizontal="20dp"
                android:minHeight="30dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:id="@+id/btn_inquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inquiry"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_quit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quit"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>